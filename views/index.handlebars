<div class="container bg">
  
  <div class="row">
    <div class="center col-sm-12">
      <h1>Eat-Da-Burger</h1>
      <p></p>
    </div>
  </div>
  
  <div class="row">

    <div class="col-sm-6">
      <h2>Da-Burgers To Eat!</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="btn-primary" type="submit">Devour</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h2>Da-Burgers Eaten!</h2>      
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}      
    </div>

  </div>

  <div class="row">
    <div class="col-sm-3"></div>
      <div class="center col-sm-6">
        <h2>Add Da-Burger!</h2>
          <form class="create-update-form" action="/" method="POST">
          <div class="form-group">
            <h4>Enter Da-Burger name you want to Devour</h4>
            <input type="text" id="ca" name="burger_name">
          </div>       
        <button class="btn-primary" type="submit">Submit-Da-Order</button>
      </form>
    </div>   
  </div>
</div>
